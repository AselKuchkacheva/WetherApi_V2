<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="90dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="16dp"
    android:background="@drawable/rounded_corners_rv"
    android:elevation="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_week_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cloud_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_week_day"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_week_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_regular"
        android:text="9 Июня"
        app:layout_constraintTop_toBottomOf="@id/iv_week_day"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_min_temp_week"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_max_temp_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_light"
        android:layout_marginStart="10dp"
        android:text="33"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_max_celsius_week"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_week_day" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_max_celsius_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_light"
        android:text="°C"
        android:textSize="10sp"
        android:layout_marginRight="2dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_max_temp_week"
        app:layout_constraintEnd_toStartOf="@id/iv_vector_up_week"
        app:layout_constraintStart_toEndOf="@id/tv_max_temp_week"
        app:layout_constraintTop_toTopOf="@id/tv_max_temp_week"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_vector_up_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_up_rv"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_max_temp_week"
        app:layout_constraintEnd_toStartOf="@id/tv_min_temp_week"
        app:layout_constraintStart_toEndOf="@id/tv_max_celsius_week"
        app:layout_constraintTop_toTopOf="@id/tv_max_temp_week" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_min_temp_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/barlow_light"
        android:text="25"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_max_temp_week"
        app:layout_constraintEnd_toStartOf="@id/tv_min_celsius_week"
        app:layout_constraintStart_toEndOf="@id/iv_vector_up_week"
        app:layout_constraintTop_toTopOf="@id/tv_max_temp_week" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_min_celsius_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:fontFamily="@font/barlow_light"
        android:text="°C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_max_temp_week"
        app:layout_constraintEnd_toStartOf="@id/iv_vector_down_week"
        app:layout_constraintStart_toEndOf="@id/tv_min_temp_week"
        app:layout_constraintTop_toTopOf="@id/tv_max_temp_week" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_vector_down_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_vector_down_rv"
        android:layout_marginRight="5dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_max_temp_week"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_min_celsius_week"
        app:layout_constraintTop_toTopOf="@id/tv_max_temp_week" />


</androidx.constraintlayout.widget.ConstraintLayout>